<!DOCTYPE module SYSTEM "module.dtd">

<module name="loggers">
  <doc>
    <description>Write logdata directly to a serial port.</description>
  </doc>
  <header>
    <file name="serial_logger.h"/>
  </header>
  <init fun="serial_logger_start()"/>
  <periodic fun="serial_logger_periodic()" autorun="TRUE"/>
  <makefile target="ap">
    <raw>
      SERIAL_LOG_UART ?= uart1
      SERIAL_LOG_UART_LOWER=$(shell echo $(SERIAL_LOG_UART) | tr A-Z a-z)
      SERIAL_LOG_UART_UPPER=$(shell echo $(SERIAL_LOG_UART) | tr a-z A-Z)
    </raw>
    <define name="USE_$(SERIAL_LOG_UART_UPPER)"/>
    <define name="SERIAL_LOG_UART" value="$(SERIAL_LOG_UART_LOWER)"/>
    <define name="SERIAL_LOG_UART_UPPER" value="$(SERIAL_LOG_UART_UPPER)"/>
    <define name="$(SERIAL_LOG_UART_UPPER)_BAUD" value="B57600"/>
    <file name="serial_logger.c"/>
  </makefile>
</module>
